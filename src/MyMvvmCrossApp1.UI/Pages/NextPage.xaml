<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage 
    x:TypeArguments="viewModels:NextViewModel"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms" 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyMvvmCrossApp1.UI.Pages.NextPage"
    xmlns:viewModels="clr-namespace:MyMvvmCrossApp1.Core.ViewModels.Home;assembly=MyMvvmCrossApp1.Core"
    x:DataType="viewModels:NextViewModel">

    <StackLayout>
        <Label Text="{Binding Name}"/>
        <Label Text="{Binding Surname}"/>
    </StackLayout>

</views:MvxContentPage>